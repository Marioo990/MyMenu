rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Funkcja sprawdzająca czy user jest adminem
    function isAdmin() {
      return request.auth != null &&
        request.auth.token.email_verified == true &&
        (
          request.auth.token.email in ['admin@restaurant.com', 'pizza99069@gmail.com'] ||
          exists(/databases/$(database)/documents/admins/$(request.auth.uid)) ||
          exists(/databases/$(database)/documents/admins/$(request.auth.token.email))
        );
    }

    // Użytkownicy mogą czytać własne dane
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null &&
        request.auth.uid == userId &&
        request.auth.token.email_verified == true;
    }

    // Tylko admini mogą zarządzać listą adminów
    match /admins/{document} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Menu - wszyscy czytają, tylko admini piszą
    match /menuItems/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings - tylko admini
    match /settings/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}